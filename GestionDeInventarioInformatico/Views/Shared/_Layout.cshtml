<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    @*<title>@ViewBag.Title - Mi aplicación ASP.NET</title>*@

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/css/pikaday.min.css">



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    @RenderBody()
    <div class="container body-content">

        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="#">
                    <div class="sidebar-brand-icon rotate-n-15"><img style="width: 39px;height: 30px;"></div>
                    <div class="sidebar-brand-text mx-3"><span>SGEI</span></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="nav navbar-nav" id="accordionSidebar">
                    <li class="nav-item" role="presentation"><a class="nav-link active" href="Index"><span style="font-size: 20px;">Equipo Informático</span></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="proveedores"><span style="font-size: 20px;">Proveedores</span></a></li>
                </ul>
                <div class="text-center d-none d-md-inline"><button class="btn rounded-circle border-0" id="sidebarToggle" type="button"></button></div>
            </div>
        </nav>


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Gestión de Inventario Informático</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/pikaday.min.js"></script>

</body>
</html>
